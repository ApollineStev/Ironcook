<section>
    <div class="album py-5 bg-light">

        {{#with recipe}}
        <div class="mx-5 text-center">
            <h2> {{title}} </h2>
            <hr>
        </div>
        <div class="d-flex justify-content-center mr-4 mt-5">
            <div class="mx-5"> 
                <img class="img-thumbnail" style="width: 20rem;" src="{{imageUrl}}">
                <br>
                <p class=" mt-3">Recipe by : {{author.username}}</p>
        {{/with}}
                <p class=" mt-3">Posted on : {{date}}</p>
            </div>
        {{#with recipe}}
            <div class="mx-5 d-flex flex-column justify-content-center" style="font-size: larger;">
                <p>Cuisine : {{cuisine}}</p>
                <p>Dish type : {{dishType}}</p>
                <p>Difficulty : {{difficulty}}</p>
                <p>Cooking time : {{cookingTime}} min</p>
                <p>Ingredients : 
                    <br>{{ingredients}}</p>
                    <br>
                    <br>
                <p class="" style="width: 18rem;">Description :   {{description}}</p>


            </div>
        </div>

        {{/with}}

        <div class="d-flex text-center  justify-content-center">
            <div class="mr-5">
                <a href="/recipe/{{recipe._id}}/edit" class="w-4">
                <button add product-id="{{id}}"  type="button" class="btn btn-success me-2">Edit</button>
            </a>
            </div>
            <p class="wx-3">        </p>
            <div>
                <form action="/recipe/{{recipe._id}}/delete" method="Post">
                <button type="button" class="btn btn-light text-success border-success">Delete recipe</button>
            </form>
            </div>

        </div>

        <div class="text-center mt-4">
            <a class="text-success" href="/recipes">Back to the recipe list</a>
        </div>

    </div>
    
</section>
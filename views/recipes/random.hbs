<section>detail
    <div class="album py-5 bg-light">

        {{#with randomRecipe}}
        <div class="mx-5">
            <h2> Random recipe: {{title}} </h2>
            <hr>
        </div>

        <div> 
            <p>Recipe by : {{author.username}}</p>
            <p>Description : {{description}}</p>
            <p>Ingredients : {{ingredients}}</p>
            <p>Cuisine : {{cuisine}}</p>
            <p>Dish type : {{dishType}}</p>
            <p>Difficulty : {{difficulty}}</p>
            <p>Cooking time : {{cookingTime}} min</p>
            <img src="{{imageUrl}}">
        </div> 
        {{/with}}

    </div>
    
</section>
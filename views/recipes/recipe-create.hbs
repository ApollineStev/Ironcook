<section>
    <div class="album py-5 bg-light">

        <div class="mx-5">
            <h2> Create a recipe </h2>
            <hr>
        </div>

        <form action="/recipe/create" method="post">
            <label> Title:
                <input type="text" name="title" />
            </label>

            <label> Description:
                <textarea name="description" cols="30" rows="4"> </textarea>
            </label>
            
            <label> Ingredients:
                <input type="text" name="ingredients" />
                <!-- how to put ingredients in array -->
            </label>
            
            <label> Cuisine:
                <input type="text" name="cuisine" />
            </label>

            <label> Dish type:
                <input type="text" name="dishType" />
            </label>
            
            <label> Difficulty:
                <input type="text" name="difficulty" />
                <!-- select option : easy, intermediate, professional -->
            </label>

            <label> Time to prepare:
                <input type="number" name="rating" min="1" max="10" />
            </label>

            <label> Image upload
                
            </label>
            
            <label> Date (automatically!!!)
                
            </label>

            <button type="submit"> Create </button>
        </form>


    </div>
</section>
<section>

    <div class="album py-5 bg-light">

        <div class="mx-5">
            <h2> Recipes recently uploaded </h2>
            <hr>
        </div>


        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                {{#each recentRecipes}}
                <div class="col">
                    <div class="card">
                        <img src="{{imageUrl}}" class="card-img-top img-responsive" alt="{{title}} image">
                        <div class="card-body">
                            <h5 class="card-title text-uppercase">{{title}}</h5>
                            <p class="card-text">Ingredients | {{ingredients}}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">CUISINE      | {{cuisine}}</li>
                            <li class="list-group-item">Dish Type    | {{dishType}}</li>
                            <li class="list-group-item">Difficulty   | {{difficulty}}</li>
                            <li class="list-group-item">Cooking Time | {{cookingTime}}</li>
                        </ul>
                        <div class="card-body text-center">
                            <a href="/recipe/{{_id}}" class="btn btn-success">Read more</a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>

        <div class="mx-5 mt-5">
            <h2> Recipes most liked </h2>
            <hr>
        </div>

        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <div class="col">
                    <div class="card">
                        <img src="/images/kitchen-img.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Ingredients</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">cuisine</li>
                            <li class="list-group-item">dish type</li>
                            <li class="list-group-item">cooking time</li>
                            <li class="list-group-item">difficulty</li>
                        </ul>
                        <div class="card-body text-center">
                            <a href="#" class="btn btn-success">Read more</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
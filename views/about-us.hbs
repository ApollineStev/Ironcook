<section>

    <div class="album py-5 bg-light">

        <div class="mx-5">
            <h2 class="text-uppercase"> About us </h2>
            <hr>
        </div>


        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-uppercase">{{title}}</h5>
                            <p class="card-text">(description)</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">CUISINE      | {{cuisine}}</li>
                            <li class="list-group-item">Dish Type    | {{dishType}}</li>
                            <li class="list-group-item">Difficulty   | {{difficulty}}</li>
                            <li class="list-group-item">Cooking Time | {{cookingTime}}</li>
                        </ul>
                        <div class="card-body text-center">
                            <a href="/recipe/{{_id}}" class="btn btn-success">To Github</a>
                        </div>
                        <img src="" class="card-img-top img-responsive" alt="image">
                    </div>
                </div>
                {{/each}}

            </div>
        </div>



    </div>

</section>

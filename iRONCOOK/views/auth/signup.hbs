<div id="form">
    <h2 class="mt-3 mb-3">Sign-up</h2>
    <form action="/signup" method="POST">

        <div class="form-floating mb-3">
            <input type="username" name="username" class="form-control" id="floatingUsername" placeholder="ironcooker">
            <label for="floatingUsername">Username</label>
        </div>

        <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="cook@ironcook.com">
            <label for="floatingEmail">Email address</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="********">
            <label for="floatingPassword">Password</label>
        </div>

        <button type="submit" class="btn btn-success">Create account</button>

        {{!-- error message will be added here --}}

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>
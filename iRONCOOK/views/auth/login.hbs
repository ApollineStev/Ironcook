<div id="form">
    <h2 class="mt-3 mb-3">Login</h2>

    <form action="/login" method="POST">

        <div class="form-floating mb-3">
            <input type="username" name="username" class="form-control" id="floatingUsername" placeholder="ironcooker">
            <label for="floatingUsername">Username</label>
        </div>
        
        <div class="form-floating mb-3">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="********">
            <label for="floatingPassword">Password</label>
        </div>

        <button type="submit" class="btn btn-success">Login</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}

    </form>
</div>